<?xml version="1.0"?>
<config>
    <global>
        <modules>
            <Mcp_Prepay>
                <version>1.0</version>
            </Mcp_Prepay>
        </modules>
        <models>
            <mcpprepay>
                <class>MCP_Prepay_Model</class>
            </mcpprepay>
        </models>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <mcp_service_observer>
                        <class>MCP_Service_Model_Observer</class>
                        <method>submitAllAfter</method>
                    </mcp_service_observer>
                </observers>
            </checkout_submit_all_after>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <MCP_Service>
                    <files>
                        <default>mcp_service.csv</default>
                    </files>
                </MCP_Service>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <mcpprepay>
                <active>0</active>
                <model>mcpprepay/mcpprepay</model>
                <payment_action>authorize</payment_action>
                <title>Vorkasse</title>
                <limit_min>1.00</limit_min>
                <limit_max>500.00</limit_max>
                <sort_order>4</sort_order>
            </mcpprepay>
         </payment>
    </default>
</config>