<?xml version="1.0"?>
<config>
    <global>
        <models>
            <mcpdebit>
                <class>MCP_Debit_Model</class>
            </mcpdebit>
        </models>
        <modules>
            <Mcp_Debit>
                <version>1.0</version>
            </Mcp_Debit>
        </modules>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <mcp_service_observer>
                        <class>MCP_Service_Model_Observer</class>
                        <method>submitAllAfter</method>
                    </mcp_service_observer>
                </observers>
            </checkout_submit_all_after>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <MCP_Service>
                    <files>
                        <default>mcp_service.csv</default>
                    </files>
                </MCP_Service>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <mcpdebit>
                <active>0</active>
                <model>mcpdebit/mcpdebit</model>
                <payment_action>authorize</payment_action>
                <title>Lastschrift</title>
                <limit_min>1.00</limit_min>
                <limit_max>500.00</limit_max>
                <sort_order>3</sort_order>
            </mcpdebit>
        </payment>
    </default>
</config>