<?xml version="1.0"?>
<config>
    <global>
        <modules>
            <Mcp_CreditCard>
                <version>1.0</version>
            </Mcp_CreditCard>
        </modules>
        <models>
            <mcpcreditcard>
                <class>MCP_CreditCard_Model</class>
            </mcpcreditcard>
        </models>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <mcp_service_observer>
                        <class>MCP_Service_Model_Observer</class>
                        <method>submitAllAfter</method>
                    </mcp_service_observer>
                </observers>
            </checkout_submit_all_after>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <MCP_Service>
                    <files>
                        <default>mcp_service.csv</default>
                    </files>
                </MCP_Service>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <mcpcreditcard>
                <active>0</active>
                <model>mcpcreditcard/mcpcreditcard</model>
                <payment_action>authorize</payment_action>
                <title>Kreditkarte</title>
                <limit_min>1.00</limit_min>
                <limit_max>500.00</limit_max>
                <sort_order>1</sort_order>
            </mcpcreditcard>
        </payment>
    </default>
</config>